@model BullsAndCows.Models.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container m-sm-5 mx-0 my-3">

    <h1 class="mb-3">Profile Details:</h1>

    <div>
        <h2 class="text-primary">@Model.Username</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Wins):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Wins)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Losses):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Losses)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WinLossRatio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WinLossRatio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalGames)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalGames)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalPoints)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalPoints)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-danger mr-2" id="deleteBtn" href="#">Delete account</a>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Go Back</a>
        <a hidden asp-controller="User" asp-action="Delete" id="confirmedDelete"></a>
    </div>
</div>

<script src="~/js/accountDelete.js"></script>
