@model BullsAndCows.Models.BindingModels.UserLoginBindingModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">    
    <div class="row">
        <div class="m-auto">
            <h1 class="text-center">Log into your account:</h1>    
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <form method="post" asp-action="Login" class="mt-3 text-center">
                <div class="form-group text-left w-100">
                    <label asp-for="Username" class="font-weight-bold">Username:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input asp-for="Username" class="form-control" placeholder="Enter your username...">
                    </div>
                </div>
                
                <div class="form-group text-left mt-1">
                    <label asp-for="Password" class="font-weight-bold">Password:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password...">
                    </div>
                </div>        
                <input type="submit" value="Login" class="btn btn-primary w-50 btn-lg my-3">
            </form>
        </div>
    </div>
</div>
