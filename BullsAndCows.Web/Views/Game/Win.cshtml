@model int;

<div class="container text-center">
    <p class="display-4 font-weight-bold">Congratulations!</p>
    <p class="lead" style="font-size: 2rem">Your new score is: <span class="font-weight-bold text-primary" style="font-size: 2.5rem">@Model</span> points</p>
    <a class="btn btn-lg btn-primary mr-2" asp-controller="Game" asp-action="Index">Play another game</a>
    <a class="btn btn-lg btn-secondary" asp-controller="Home" asp-action="Index">Go Back</a>
</div>
